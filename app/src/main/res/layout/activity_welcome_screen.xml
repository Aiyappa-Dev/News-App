<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WelcomeScreen">
    <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgView_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/infomo"
            android:layout_marginTop="-20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_display1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/imgView_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="WELCOME"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_display2"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/text_display1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Welcome to the Infomo Reference App."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_display3"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textSize="17sp"
            android:layout_gravity="center_vertical|end"
            app:layout_constraintTop_toBottomOf="@id/text_display2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="This app has been posted to provide practical examples of how ads sourced from Infomo’s extensive ad campaign inventory can be readily presented in a variety of IAB formats in any native mobile app."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_display4"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical|end"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/text_display3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="To further monetise their mobile assets, publishers simply integrate Infomo’s SDK with
their app(s) and timely and relevant ads will start to flow."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_display6"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="10dp"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/text_display4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="For the purposes of this reference app and to best demonstrate its capabilities we ask that you provide some basic anonymous data so that the appropriate ads can be selected and presented."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_display7"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="10dp"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/text_display6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Please note that we are using purely anonymous test data for this purpose."/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:background="@color/color_blue"
            android:text="Next"
            app:layout_constraintTop_toBottomOf="@+id/text_display7"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


